{
  "name": "h-pos",
  "version": "1.0.0",
  "description": "Ultra-modern, cloud-based, fully interconnected Call Center and POS platform",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm install --legacy-peer-deps && npm run build",
    "start": "node server/index.js",
    "test": "jest",
    "docker:build": "docker build -t h-pos .",
    "docker:run": "docker-compose up -d"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "prisma": "^6.13.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "pos",
    "call-center",
    "restaurant",
    "retail",
    "real-time"
  ],
  "author": "H POS Team",
  "license": "MIT"
}
