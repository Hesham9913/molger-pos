{
  "name": "h-pos",
  "version": "1.0.0",
  "description": "Ultra-modern, cloud-based, fully interconnected Call Center and POS platform",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm install --legacy-peer-deps && npm run build",
    "start": "prisma generate && node server/index.js",
    "postinstall": "prisma generate",
    "railway:start": "prisma generate && prisma migrate deploy && node server/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "node database/migrate.js seed",
    "test": "jest",
    "docker:build": "docker build -t h-pos .",
    "docker:run": "docker-compose up -d"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "prisma": "^6.13.0",
    "redis": "^4.7.1",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "stripe": "^18.4.0",
    "twilio": "^5.8.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "pos",
    "call-center",
    "restaurant",
    "retail",
    "real-time"
  ],
  "author": "H POS Team",
  "license": "MIT"
}
